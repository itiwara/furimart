.mypage-container.clearfix
  .pay-method-area
    %h2 支払い方法
    .credit-card-area
      %h3 登録クレジットカード情報
      - if @card
        .card-number
          = "**** **** **** " + @default_card_information.last4
        .card-expire
          - exp_month = @default_card_information.exp_month.to_s
          - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
          = exp_month + " / " + exp_year
        = button_to "削除する", delete_credit_cards_path, method: :delete, id: 'delete-card-btn'
      - else
        = link_to new_credit_card_path, id: "register-card-btn" do
          = icon('far', 'credit-card', class: "card-icon")
          = "クレジットカードを登録する"

  = render partial: 'my_pages/side_bar', locals: {card: @card}
