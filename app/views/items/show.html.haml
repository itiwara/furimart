.item__show
  .item__show__main
    .item__show__main__content
      .item__show__main__content__detail
        %h1.item__name 
          = @item.name
        .item__photo
          %ul
            %li
              = image_tag  "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png"
              %ul
                %li
                  = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png"
                %li
                  = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/11/a005.png"
                %li 
                  = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/12/a006.png"
        .item__price
          %span.item__price__main
            = "¥#{@item.price}"
          .item__price__detail
            %span (税込)
            %span 送料込み
        - unless user_signed_in? && current_user.id == @item.user_id
          .item__buy__btn
            = link_to "購入画面に進む", new_purchase_path
        .item__message
          = @item.item_explanation
        .item__table
          %table{border: "1"}
            %tr 
              %th 出品者
              %td 
                = link_to "#" do
                  = @item.user.nickname
                %br
                %i.fas.fa-laugh
                %span
                  - good_rates = UserRate.where(user_id: @item.user.id, rate: "good").length
                  = "#{good_rates}"
                %i.fas.fa-meh
                %span
                  - normal_rates = UserRate.where(user_id: @item.user.id, rate: "normal").length
                  = "#{normal_rates}"
                %i.fas.fa-frown
                %span
                  - bad_rates = UserRate.where(user_id: @item.user.id, rate: "bad").length
                  = "#{bad_rates}"
            %tr 
              %th カテゴリー
              %td
                = link_to "#" do
                  = @category_grandchild.name
                %br
                = link_to "#" do
                  = @category_child.name
                %br
                = link_to "#" do
                  = @category_parent.name
            %tr 
              %th ブランド
              %td
                - if @item.brand.present?
                  = link_to "#" do
                    = Brand.find(@item.brand_id).name
            %tr 
              %th 商品のサイズ
              %td
                - if @item.size.present?
                  = Size.find(@item.size_id).name
            %tr 
              %th 商品の状態
              %td
                = ItemStatus.find(@item.status).statu
            %tr 
              %th 配送料の負担
              %td
                = ItemDeliveryFee.find(@item.delivery_fee).payer
            %tr 
              %th 配送の方法
              %td
                = ItemDeliveryMethod.find(@item.delivery_method).way
            %tr 
              %th 配送元地域
              %td 
                = ItemPrefecture.find(@item.delivery_from_location).name
            %tr 
              %th 発送日の目安
              %td
                = ItemPreparationDay.find(@item.preparation_day).days
        .optionalArea
          %ul.heart__btn
            %li.star__btn__detail
              %i.far.fa-heart
              お気に入り 0
          %ul.flag__btn
            %li.flag__btn__detail
              = link_to "#" do
                %i.fa.fa-flag
                不適切な商品の通報
      - if user_signed_in? && current_user.id == @item.user_id
        .item__show__main__content__box
          .box__my__btn
            = link_to "商品の編集", "#", class: "edit__btn"
            = link_to "この商品を削除する", "#", class: "delete__btn"
      .item__show__main__content__comment
        .comment__content
          .comment__list
            - @comments.each do |comment| 
              .comment__list__content
                .comment__list__content__user
                  = link_to my_pages_path{comment.user_id}, class: "user__nickname" do
                    = User.find{@item.user_id}.nickname
                  = link_to my_pages_path{comment.user_id} do
                    = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/12/a006.png", class: "user__image"
                .comment__list__content__message
                  = simple_format(comment.content)
                  .comment__list__content__message__icons
                    %i.far.fa-clock
                    = time_ago_in_words(comment.created_at)
                    %p 前
          - if user_signed_in?
            = form_with(model: [@item, @comment], local: "true") do |f|
              =f.text_area :content, class: "textarea"
              %p.noticeMsg 
                相手のことを考え丁寧なコメントを心がけましょう。
                %br
                不快な言葉遣いなどは利用制限や退会処分となることがあります
              = f.button type: "subnit", class: "commentBtn" do
                %i.fa.fa-comment コメントする
      .item__show__main__relatedeItems
        = link_to "#" do
          = "#{@item.category.name}をもっと見る"