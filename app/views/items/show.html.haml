.item__show
  .item__show__main
    .item__show__main__content
      .item__show__main__content__detail
        %h1.item__name 
          = @item.name
        .item__photo
          %ul
            %li
              = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png"
              %ul
                %li
                  = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/10/a004.png"
                %li
                  = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/11/a005.png"
                %li 
                  = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/12/a006.png"
        .item__price
          %span.item__price__main 
            
          .item__price__detail
            %span (税込)
            %span 送料込み
        .item__message 美味しい料理。フルコース。
        .item__table
          %table{border: "1"}
            %tr 
              %th 出品者
              %td 
                = link_to "メン", "#"
                %br
                %i.fas.fa-laugh
                %span 10
                %i.fas.fa-meh
                %span 10
                %i.fas.fa-frown
                %span 10
            %tr 
              %th カテゴリー
              %td
                = link_to "メンズ", "#" 
                %br
                = link_to "バッグ", "#" 
                %br
                = link_to "リュック", "#" 
            %tr 
              %th ブランド
              %td  
                = link_to "プラダ", "#"
            %tr 
              %th 商品のサイズ
              %td 
            %tr 
              %th 商品の状態
              %td
                = ItemStatus.find(@item.status).statu
            %tr 
              %th 配送料の負担
              %td
                = ItemDeliveryFee.find(@item.delivery_fee).payer
            %tr 
              %th 配送の方法
              %td
                = ItemDeliveryMethod.find(@item.delivery_method).way
            %tr 
              %th 配送元地域
              %td 
                = ItemPrefecture.find(@item.delivery_from_location).name
            %tr 
              %th 発送日の目安
              %td
                = ItemPreparationDay.find(@item.preparation_day).days
        .optionalArea
          %ul.star__btn
            %li.star__btn__detail
              %i.fa.fa-star 
              お気に入り 0
          %ul.flag__btn
            %li.flag__btn__detail
              = link_to "#" do
                %i.fa.fa-flag
                不適切な商品の通報
      .item__show__main__content__comment
        .comment__content
          .comment__list
            - @comments.each do |comment| 
              .comment__list__content
                .comment__list__content__user
                  = link_to "item_path{comment.item.id}", class: "user__nickname" do
                    = comment.user.nickname
                  = link_to "item_path{comment.item.id}" do
                    = image_tag "https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/12/a006.png", class: "user__image"
                .comment__list__content__message
                  = simple_format(comment.content)
                  .comment__list__content__message__icons
                    %i.far.fa-clock
                    = time_ago_in_words(comment.created_at)
                    %p 前
          - if user_signed_in?
            = form_with(model: [@item, @comment], local: "true") do |f|
              =f.text_area :content, class: "textarea"
              %p.noticeMsg 
                相手のことを考え丁寧なコメントを心がけましょう。
                %br
                不快な言葉遣いなどは利用制限や退会処分となることがあります
              = f.button type: "subnit", class: "commentBtn" do
                %i.fa.fa-comment コメントする
    %ul.item__show__main__links
      %li
        = link_to "#" do
          %i.fa.fa-angle-left
          %span 前の商品
      %li
        = link_to "#" do
          %span 後ろの商品
          %i.fa.fa-angle-right
    .item__show__main__relatedeItems
      = link_to "メンズをもっと見る", "#" 
