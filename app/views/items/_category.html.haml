- items.each_with_index do |item,i|
  - if i <= 2
    .menu5__item_box__items__item
      = link_to item_path(item.id) do
        .image
          = image_tag item.item_images[0].image.url
          - if item.buyer_id == '1'
            .sold-tag
              .sold-tag__title sold out
        .box
          %h3.box__title
            = item.name
          .box__content
            %ul
              %li
                = item.price
              %li
                = icon('fas','heart', class: 'icon')
                ０
            %p (税込)
    