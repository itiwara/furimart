.items-new-wrapper
  .form__area
    = form_for @item do |form|
      .form__content__image
        %h5.form__title
          出品画像
        %span.required__text
          必須
        .form-box
          %h3.form__box__image
            最大10枚までアップロードできます
        .form__box__area
          -# = form.fields_for :item_images do |image|
          .flexbox
            .new-wrapper__main__preview
            %label{id: "image-wrapper", action: request.path}
              .new-wrapper__main__image-field
                .new-wrapper__main__image-field__texts
                  %i{class: "fas fa-camera",id: "camera-icon"}
                  .new-wrapper__main__image-field__texts__text
                    ドラッグアンドドロップ
                    %br
                    またはクリックしてファイルをアップロード
              = form.fields_for :item_images do |i|
                = i.file_field :image, {class: "file-field"}
        .form__content
          %h5.form__title
            商品名
          %span.required__text
            必須
          .items-new__page__main__name__form
            = form.text_field :name, placeholder: "40文字まで", class: "items-new__page__main__name__form__bar"
        .form__content
          %h5.form__title
            商品説明
          %span.required__text
            必須
          .items-new__page__main__explanation__form
            = form.text_area :name, placeholder: "商品の説明(必須 1,000文字以内)(色、素材、重さ、定価、注意点など)例)2010年頃に一万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", class: "items-new__page__main__name__form__bar"
          .text__count
            %span 0/1000
        .form__detail
          商品の詳細
        .listing-form-box
          .listing-product-detail__category
            = form.label 'カテゴリー', class: 'listing-default__label'
            %span.required__text 
              必須
            .listing-select-wrapper
              .listing-select-wrapper__box
                .listing-select-wrapper__box--select
                  = form.collection_select :category_id, @category_parent_array, :id, :name, prompt: "---"
                  .arrow-icon
                    = icon('fas' , 'chevron-down', class: "arrow-icon")
        .form__content
          %h5.form__title
            ブランド
          %span.any__text
            任意
          .items-new__brand__main__name__form
            = form.text_field :name, placeholder: "例）シャネル", class: "items-new__brand__main__name__form__bar"  
        .form__content
          %h5.form__title
            商品の状態
          %span.required__text
            必須
          .item_new_brand_text
            = form.select :preparation_day, [["新品・未使用", 0],["未使用に近い", 1], ["目立った傷や汚れなし", 2], ["やや傷や汚れあり", 3]], prompt: "---"
            .arrow-icon
              = icon('fas' , 'chevron-down', class: "arrow-icon")
        .form__delivery
          配送について
        .form__content
          %h5.form__title
            配送の負担
          %span.required__text
            必須
        .item_new_brand_text
          = form.select :preparation_day, [["送料込み", 0],["着払い", 1]], prompt: "---" 
          .arrow-icon
            = icon('fas' , 'chevron-down', class: "arrow-icon")
        .form__content
          %h5.form__title
            発送までの日数
          %span.required__text
            必須
        .item_new_brand_text
          = form.select :preparation_day, [["1〜2日で発送", 0],["2〜3日で発送", 1],["4〜7日で発送", 2]], prompt: "---" 
          .arrow-icon
            = icon('fas' , 'chevron-down', class: "arrow-icon")
        .form__price__title
          価格（¥300〜9,999,999）
        .form__price
          .form__price__head
            %h5.form__title
              販売価格
            %span.required__text
              必須
          .form__price__box
            %span.jpy__icon ¥
            = form.text_field :price, placeholder: "0", class: "items-new__brand__main__name__form__bar", id: "price-form"
        .fee
          販売手数料（10%）
        .profit
          %h1.profit__text 
            販売利益 
          .profit__price
            0円
        .submit-btn
          = form.submit "出品する", class: "exhibit-btn"
        .submit-btn
          = form.submit "下書きに保存", class: "draft-btn"
        .item__back
          = link_to "戻る", :back
