              .item_new_status__show1__2
                %h7
                  配送の負担
                .item_new_status__show1__2__3
                  %h8
                    必須
              .item_new_brand_tex
                %select
                  %option{:value => ""} ---選択してください---
                  %option{:value => "0"} 送料込み
                  %option{:value => "1"} 着払い

              .item_new_status__show1__2
                %h7
                  配送元の地域
                .item_new_status__show1__2__3
                  %h8
                    必須
              .item_new_brand_tex
                %select
                  %option{:value => ""} ---選択してください---
                  %option{:value => "0"} 都道府県

              .item_new_status__show1__2
                %h7
                  発送までの日数
                .item_new_status__show1__2__3
                  %h8
                    必須
              .item_new_brand_tex
                %select
                  %option{:value => ""} ---選択してください---
                  %option{:value => "0"} 1〜2日で発送
