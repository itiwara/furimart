.items-new
  .items-new__page
    .items-new__page__image
      .items-new__page__image__title
        %h5.items-new__page__image__title__text
          出品画像
        .items-new__page__image__title__required
          %h6.items-new__page__image__title__required__text
            必須
      .items-new__page__image__uploader
        %h3.items-new__page__image__uploader__text
          最大10枚までアップロードできます
      .items-new__page__image__uploader__form
        複数枚投稿できるフォームの作成をします
    .items-new__page__main
      = form_for @item do |form|
        .items-new__page__main__name
          .items-new__page__main__name__texts
            %h5.items-new__page__main__name__texts__text
              商品名
            .items-new__page__main__name__texts__required
              %h6.items-new__page__main__name__texts__required__text
                必須
          .items-new__page__main__name__form
            = form.text_field :name, placeholder: "40文字まで", class: "items-new__page__main__name__form__bar"
        .items-new__page__main__explanation
          .items-new__page__main__explanation__texts
            %h5.items-new__page__main__explanation__texts__text
              商品説明
            .items-new__page__main__explanation__texts__required
              %h6.items-new__page__main__explanation__texts__required__text
                必須
          .items-new__page__main__explanation__form
            = form.text_area :name, placeholder: "商品の説明(必須 1,000文字以内)(色、素材、重さ、定価、注意点など)例)2010年頃に一万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", class: "items-new__page__main__name__form__bar"
          .item_new_reite
            %span 0/1000
          .item_new_reite1
            入力してください
        .item_new_category
          .item_new_category__show
            .item_new_category__show1
              商品の詳細
              .listing-form-box
                .listing-product-detail__category
                  = form.label 'カテゴリー', class: 'listing-default__label'
                  %span.listing-default--require 必須
                  .listing-select-wrapper
                    .listing-select-wrapper__box
                      .listing-select-wrapper__box--select

                        = form.collection_select :category_id, @category_parent_array, :id, :name, prompt: "---"

        .items-new__brand__main
          = form_for @item do |form|
            .items-new__brand__main__name
              .items-new__brand__main__name__texts
                %h5.items-new__brand__main__name__texts__text
                  ブランド
                .items-new__brand__main__name__texts__required
                  %h6.items-new__brand__main__name__texts__required__text
                    任意
              .items-new__brand__main__name__form
                = form.text_field :name, placeholder: "例）シャネル", class: "items-new__brand__main__name__form__bar"
              
        .items-new__brand__status__main
          = form_for @item do |form|
            .items-new__brand__status__main__name
              .items-new__brand__main__name__texts
                %h5.items-new__brand__status__main__name__texts__text
                  商品の状態
                .items-new__brand__status__main__name__texts__required
                  %h6.items-new__brand__status__main__name__texts__required__text
                    任意
              .item_new_brand_tex
                %select
                  %option{value: ""} ---選択してください---
                  %option{value: "0"} 新品・未使用
                  %option{value: "1"} 未使用に近い
                  %option{value: "2"} 目立った傷や汚れなし
                  %option{value: "3"} やや傷や汚れあり
    
    .items-new__delivery__main
      = form_for @item do |form|
        .items-new__delivery__main__name
          %h4.items-new__delivery__main__name__3
            配送について
          .items-new__delivery__main__name__3__texts
            %h5.items-new__delivery__main__name__3__texts__text
              配送の負担
            .items-new__delivery__main__name__3__texts__required
              %h6.items-new__delivery__main__name__3__texts__required__text
                必須
          .item_new_brand_tex
            %select
              %option{value: ""} ---選択してください---
              %option{value: "0"} 送料込み
              %option{value: "1"} 着払い

          .items-new__delivery__main__name__3__texts
            %h5.items-new__delivery__main__name__3__texts__text
              発送までの日数
            .items-new__delivery__main__name__3__texts__required
              %h6.items-new__delivery__main__name__3__texts__required__text
                必須
          .item_new_brand_tex
            %select
              %option{value: ""} ---選択してください---
              %option{value: "0"} 1〜2日で発送

    .items-new__price__main
      = form_for @item do |form|
        .items-new__price__main__name
          %h4.items-new__delivery__main__name__3
            価格（¥300〜9,999,999）
          .items-new__price__main__name__3__texts
            %h5.items-new__price__main__name__3__texts__text
              販売価格
            .items-new__price__main__name__3__texts__required
              %h6.items-new__price__main__name__3__texts__required__text
                必須 
            .items-new__price__main__name__form
              = form.text_field :name, placeholder: "0", class: "items-new__brand__main__name__form__bar"
        .items-new__price__main__name__form__fee
          販売手数料（10%）

        .item_price__rate
          販売利益 
          .item_price__rate__Ex
            %input#submit_button1{name: "submit", type: "submit", :value => "出品"}/
          
          .item_price__rate__write
            %input#submit_button1{name: "submit", type: "submit", value: "下書きに保存"}/
          .item_price__back
            もどる
